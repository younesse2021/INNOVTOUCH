<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<layer-list>
			<item>
				<shape>
					<solid
						android:color="#FFFFFF" />
					<stroke
						android:width="1dp"
						android:color="#DCDCDC" />
					<corners
						android:radius="5dp" />
					<padding
						android:left="15dp"
						android:top="15dp"
						android:right="15dp"
						android:bottom="15dp" />
				</shape>
			</item>
			<item
				android:width="12dp"
				android:height="12dp"
				android:gravity="right|center">

            <!--     <bitmap
						android:alpha="0.5"
						android:src="@drawable/iconDropDown" />
-->
				<shape>

					<solid
						android:color="#FFFFFF" />

				</shape>

			</item>
		</layer-list>
	</item>
</selector>